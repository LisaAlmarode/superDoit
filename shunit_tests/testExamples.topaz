#! /usr/bin/env bash

echo "GEMSTONE=$GEMSTONE"

if [ "$GITHUB_WORKSPACE" != "" ] ; then
	# running github ci test PLATFORM and GS_VERS are preset
	if [ "$PLATFORM" = "macos-10.15" ] ; then
		export GEMSTONE="${GITHUB_WORKSPACE}/tests/products/GemStone64Bit${GS_VERS}-i386.Darwin"
	else
		export GEMSTONE="${GITHUB_WORKSPACE}/tests/products/GemStone64Bit${GS_VERS}-x86_64.Linux"
	fi
	. ${GITHUB_WORKSPACE}/dev/defPath.env
	PATH=${GITHUB_WORKSPACE}/examples/simple:$PATH

	cat - > $GEMSTONE/data/.topazini << EOF
SET GEMSTONE superDoit_$GS_VERS
set user SystemUser
set password swordfish
EOF
fi

test_simple_topaz() {
if [[ "$GS_VERS" = "3.6."* ]] ; then
	# run without error and get right answer
	seven=`simple.topaz	-lq -I $GEMSTONE/data/.topazini`
	assertEquals "wrong answer" '7' "${seven}"
elif [[ "$GS_VERS" = "3.5."* ]] ; then
	# run without error, but topaz output not suppressed
	simple.topaz -l -I $GEMSTONE/data/.topazini
else
	# topaz output not suppressed and exit status is expected to be 1
	expected='<topaz> 			input /home/runner/work/superDoit/superDoit/examples/simple/simple.topaz
topaz> #!/usr/bin/env superdoit_topaz
topaz> #
topaz> # simply execute a topaz script: 
topaz> #		- using current $GEMSTONE and .topazini supplied on command line
topaz> #				simple.topaz -I ./.topazini -L
topaz> #		- using current $GS_HOME, stone name and topaz args supplied on command line
topaz> #				simple.topaz gs_361 -L
topaz> 
topaz> set u DataCurator p swordfish
Warning: clearing the previous GemStone password.
topaz> 
topaz> login
successful login
topaz 1> 
topaz 1> run
"in order to be able to see just the result of the script
	the topaz -q option should be used (if available) when 
	running the script and then write to `stdout/stderr` the things
	you want visible to user"
GsFile stdout nextPutAll: (3 + 4) printString; lf
%
7
true
topaz 1> 
Logging out session 1.>'
	ans=`simple.topaz -l -I $GEMSTONE/data/.topazini`
	exitStatus=$?	# ignored 
	assertEquals "wrong answer" "$expected" "${ans}"
fi
}

. shunit_tests/shunit2-2.1.8/shunit2_test_helpers
. shunit_tests/shunit2-2.1.8/shunit2


